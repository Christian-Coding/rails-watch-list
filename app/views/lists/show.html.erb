<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1505686994434-e3cc5abf1330?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1773&q=80);">
  <div class="container">
    <h1 class="mb-3"><%= "#{@list.name}" %> </h1>
      <%= link_to "add a bookmark", new_list_bookmark_path(@list), class: "btn btn-flat" %>
  </div>
</div>


<div class="cards p-5">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="card-bookmark">
    <img src="https://images.unsplash.com/photo-1601513445506-2ab0d4fb4229?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=987&q=80">
    <div class="card-bookmark-infos p-2">
      <div>
        <h2><%= bookmark.movie.title %></h2>
        <p><%= bookmark.movie.overview %></p>
        <p class="mt-3">My comment: "<%= bookmark.comment %>"<p>
      </div>
      <p class="card-bookmark-link">
        <strong><%= link_to "Delete", bookmark_path(bookmark.id), data: {turbo_method: :delete, turbo_confirm: "Delete?"} %></strong>
      </p>
      <h2 class="card-rating"><%= bookmark.movie.rating %></h2>
    </div>
  </div>
  <% end %>
</div>

<div class="cards p-5">
  <%= link_to "return to lists", lists_path, class: "btn btn-ghost"%>
</div>
