<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1505686994434-e3cc5abf1330?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1773&q=80);">
  <div class="container">
    <h1><%= "#{@list.name}" %> </h1>
      <%= link_to "create a bookmark", new_list_bookmark_path(@list), class: "btn btn-flat" %>
  </div>
</div>


<div class="cards p-5">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="card-bookmark">
    <img src="https://images.unsplash.com/photo-1505686994434-e3cc5abf1330?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1773&q=80" />
    <div class="card-bookmark-infos p-2">
      <div>
        <h2><%= bookmark.movie.title %></h2>
        <h6><%= bookmark.movie.overview %></h6>
        <p>My comment: <%= bookmark.comment %><p>
      </div>
      <h2 class="card-bookmark-pricing"><%= link_to "Delete", bookmark_path(bookmark.id), data: {turbo_method: :delete, turbo_confirm: "Delete?"} %></h2>
    </div>
  </div>
  <% end %>
  <%= link_to "return to overview", lists_path, class: "btn btn-ghost"%>
</div>
